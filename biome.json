{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "maxSize": 1572864
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded"
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "nursery": {
        "useSortedClasses": "warn"
      },
      "a11y": {
        "noSvgWithoutTitle": "off"
      },
      "correctness": {
        "noUnusedVariables": "error",
        "useExhaustiveDependencies": "off"
      },
      "security": {
        "noDangerouslySetInnerHtml": "off"
      },
      "style": {
        "useBlockStatements": "error",
        "noNonNullAssertion": "off"
      },
      "performance": {
        "noDelete": "off"
      },
      "suspicious": {
        "noExplicitAny": "off"
      },
      "complexity": {
        "noForEach": "off"
      }
    },
    "ignore": [
      ".vitest",
      "node_modules",
      ".next",
      "dist",
      ".nuxt",
      "./packages/api/src/openapi.d.ts",
      ".wrangler",
      ".react-email",
      ".contentlayer"
    ]
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2,
    "enabled": true,
    "lineWidth": 100,
    "ignore": ["node_modules", ".next", "dist"]
  },
  "organizeImports": {
    "enabled": true,
    "ignore": ["node_modules", ".next", "dist"]
  }
}
